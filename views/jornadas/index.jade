extends ../layout.jade
block content
  br
  form(action="/ins_jornada")
    input(type="submit" class="btn btn-primary pull-right"  style="margin-right: 20px" value="Nueva" href="/")
  div(class="col-md-4 col-md-offset-4")
    h1(class=" azul-oscuro") Jornadas
    form(method="POST" action="/jornadas" enctype="urlencoded")
      div(class="form-group funkyradio")
        - each jornada in jornadas
          div(class="funkyradio-success")
            input(type="radio" name="jornada" value= jornada.id_jornada id=jornada.id_jornada)
            label(for=jornada.id_jornada)= jornada.temporada
            br
      if !empty
        input(type="submit" class="btn btn-primary" value="Aceptar")
