extends ../layout.jade
block content
    div(class="col-md-4 col-md-offset-4")
      h1(class="azul-oscuro") Nueva jornada
      form(method="POST" action="/ins_jornada" enctype="urlencoded")
        div(class="form-group")
          label Sede
          br
          select(name="sede" class="form-control")
            - each sede in sedes
              option= sede.nombre
          br
          label Jornada
          br
          input(type="text" name="jornada" class="form-control" placeholder="NÃºmero de jornada")
          br
          label Temporada
          br
          select(name="temporada" class="form-control")
            - each temporada in temporadas
              option= temporada.id_temporada
          br
          input(type="text" name="nueva_temporada" class="form-control" placeholder="o introduzca una nueva temporada")
          br
          label Fecha
          br
          input(type="text" name="fecha" class="form-control" placeholder="Fecha de la jornada")
          br
          br
          input(type="submit" class="btn btn-primary" value="Guardar")
